import cv2
import mediapipe as mp

# --- Mediapipe setup ---
mp_hands = mp.solutions.hands
mp_drawing = mp.solutions.drawing_utils

# we'll use the context manager style (recommended)
def main():
    cap = cv2.VideoCapture(0)  # try 1 or 2 if 0 doesn't work

    # check if camera opened successfully
    if not cap.isOpened():
        print("❌ Could not open camera.")
        return

    with mp_hands.Hands(
        static_image_mode=False,
        model_complexity=1,
        min_detection_confidence=0.7,
        min_tracking_confidence=0.7,
        max_num_hands=1
    ) as hands:

        while True:
            ret, frame = cap.read()
            if not ret:
                print("❌ Failed to grab frame.")
                break

            # Flip for selfie view
            frame = cv2.flip(frame, 1)

            # Convert BGR -> RGB for mediapipe
            frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)

            # Optional but recommended
            frame_rgb.flags.writeable = False
            results = hands.process(frame_rgb)
            frame_rgb.flags.writeable = True

            landmark_list = []

            # --- DEBUG PRINT ---
            # This will show None or a list of hand landmarks
            print("multi_hand_landmarks:", results.multi_hand_landmarks)

            if results.multi_hand_landmarks:
                # For now, just use the first detected hand
                hand_landmarks = results.multi_hand_landmarks[0]

                # Draw standard mediapipe overlay
                mp_drawing.draw_landmarks(
                    frame,
                    hand_landmarks,
                    mp_hands.HAND_CONNECTIONS
                )

                # Also draw big circles for each landmark (easier to see)
                h, w, _ = frame.shape
                for lm in hand_landmarks.landmark:
                    cx, cy = int(lm.x * w), int(lm.y * h)
                    landmark_list.append((cx, cy))
                    cv2.circle(frame, (cx, cy), 5, (0, 0, 255), -1)

            # TEMP: comment out your detect_gesture to be sure it isn't breaking things
            # detect_gesture(frame, landmark_list, results)

            cv2.imshow("Hand Landmarks", frame)
            if cv2.waitKey(1) & 0xFF == ord("q"):
                break

    cap.release()
    cv2.destroyAllWindows()


if __name__ == "__main__":
    main()
